<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <!-- Configuration section-handler declaration area. -->
  <configSections>
    <sectionGroup name="browserConfigurationGroup">
      <section
        name="browserConfiguration"
        type="Tiver.WebDriverExtended.Configuration.BrowserConfigurationSection, Tiver.WebDriverExtended"
        allowLocation="true"
        allowDefinition="Everywhere" />
    </sectionGroup>
    <sectionGroup name="waitConfigurationGroup">
      <section
        name="waitConfiguration"
        type="Tiver.Core.Configuration.WaitConfigurationSection, Tiver.Core"
        allowLocation="true"
        allowDefinition="Everywhere" />
    </sectionGroup>
  </configSections>

  <!-- Configuration section settings area. -->
  <browserConfigurationGroup>
    <browserConfiguration
      browserType="firefox">
      <resolution
        width="800"
        height="600" />
    </browserConfiguration>
  </browserConfigurationGroup>
  <waitConfigurationGroup>
    <waitConfiguration
      timeout="5000"
      pollingInterval="250" />
  </waitConfigurationGroup>
</configuration>